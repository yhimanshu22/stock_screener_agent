# Multi-stage build: build React (Vite) app, serve with nginx
FROM node:18-alpine AS build
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source, build
COPY . .
ENV VITE_API_BASE=http://127.0.0.1:8000
RUN npm run build

# Production image with nginx
FROM nginx:stable-alpine
# Remove default site and copy built assets
RUN rm -rf /usr/share/nginx/html/*
COPY --from=build /app/dist /usr/share/nginx/html

# Optional: copy a simple nginx config to support SPA routing (index fallback)
# If you have a custom nginx.conf, copy it here:
# COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
